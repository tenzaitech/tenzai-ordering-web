# TENZAI Ordering System - Environment Variables
# Copy this file to .env.local and fill in the values

# App Origin (Public - used for generating canonical URLs in LINE Flex messages)
# Example: https://order.tenzai.com (no trailing slash)
NEXT_PUBLIC_APP_ORIGIN=

# Supabase (Public - exposed to client)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (Server-side only)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# LINE LIFF (Public - exposed to client)
NEXT_PUBLIC_LIFF_ID=

# LINE Official Account Basic ID (Public - for add friend feature)
# Format: @abc123xyz (include the @ symbol)
NEXT_PUBLIC_LINE_OA_ID=

# LINE Messaging API (Server-side only)
LINE_CHANNEL_ACCESS_TOKEN=

# LINE User IDs for notifications (Server-side only)
LINE_APPROVER_ID=
LINE_STAFF_ID=

# Admin Authentication (Server-side only)
ADMIN_API_KEY=

# Staff PIN for fulfillment dashboard
STAFF_PIN=
